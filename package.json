{
  "name": "i-starred-it",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @i-starred-it/db db:push",
    "db:studio": "turbo -F @i-starred-it/db db:studio",
    "db:generate": "turbo -F @i-starred-it/db db:generate",
    "db:migrate": "turbo -F @i-starred-it/db db:migrate",
    "db:migrate:local": "turbo -F server db:migrate:local"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@types/node": "^24.7.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "tsdown": "catalog:",
    "turbo": "^2.5.8",
    "ultracite": "5.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "packageManager": "pnpm@10.18.2"
}
